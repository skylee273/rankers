<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="singleViewModel"
            type="com.project.rankers.viewmodels.SingleViewModel"/>
        <variable
            name="singleActivity"
            type="com.project.rankers.views.fragment.SingleFragment"/>
    </data>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_regit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="32dp"
                android:background="@color/color_bg"
                android:onClick="@{() -> singleActivity.regitClick()}"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:text="@string/single_btn_name"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_lose"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/single_lose"
                android:inputType="number"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/edit_result" />

            <View
                android:id="@+id/view3"
                android:layout_width="3dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_result" />

            <EditText
                android:id="@+id/edit_win"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/single_win"
                android:inputType="number"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toStartOf="@+id/view3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_result" />

            <EditText
                android:id="@+id/edit_result"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:focusable="false"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_vertical"
                android:hint="@string/single_result"
                android:onClick="@{(view) -> singleViewModel.resultClick(view)}"
                android:text="@{singleViewModel.result}"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_location" />

            <EditText
                android:id="@+id/edit_location"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:focusable="false"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_vertical"
                android:hint="@string/single_location"
                android:onClick="@{(view) -> singleViewModel.locationClick(view)}"
                android:text="@{singleViewModel.location}"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_other" />

            <EditText
                android:id="@+id/edit_date"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:focusable="false"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_vertical"
                android:hint="@string/single_date"
                android:onClick="@{(view) -> singleViewModel.dateClick(view)}"
                android:text="@{singleViewModel.dateTime}"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_other"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/costom_edit_text_bg"
                android:ems="10"
                android:fontFamily="@font/notosanscjkkrmedium"
                android:gravity="center_vertical"
                android:hint="@string/single_other"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
